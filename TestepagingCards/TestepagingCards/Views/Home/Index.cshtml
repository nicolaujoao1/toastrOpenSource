@model IEnumerable<AccordionItem>
@{
    ViewData["Title"] = "Home Page";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    int pageSize = ViewBag.PageSize;
}
<style>
    .color-border {
        border: 2px solid black;
        border-radius: 20px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="accordion" id="accordionExample">
                @foreach (var item in Model)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(item.Id)" aria-expanded="true" aria-controls="collapse@(item.Id)">
                                <img src="~/imgs/historia.png" alt="Texto alternativo" style="width: 20px; height: 20px; margin-right: 10px;" /> <!-- Imagem ao lado do título -->
                                @item.Title
                            </button>
                        </h2>
                        <div id="collapse@(item.Id)" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body d-flex p-4">
                                <div class="pr-5">
                                    <img src="~/imgs/prontuario-medico.png" alt="Texto alternativo" style="width: 100px; height: 100px;" />
                                </div>
                                <div class="pl-5">
                                    @item.Information
                                </div>
                            </div>
                            <div class="d-flex justify-content-end p-4">
                                <a href="#">Ver mais</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <nav aria-label="Navegação de página exemplo">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })" tabindex="-1">Anterior</a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })">Próximo</a>
                    </li>
                </ul>
            </nav>

        </div>
